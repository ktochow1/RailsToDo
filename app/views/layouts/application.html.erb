<!DOCTYPE html>
<html>
  <head>
    <title>Project</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="clearfix">
      <div class="nav">
        <ul>
          <% if logged_in? %>
          <li><%= link_to "Home", user_path(current_user) %></li>
          <li><%= link_to "New Project", new_user_project_assignment_path(current_user) %></li>
          <li><%= link_to "New List",  new_list_path(current_user)%></li>
          <li><%= link_to "All Lists", lists_path(current_user)%></li>
          <li><%= link_to "All Projects", list_project_assignments_path(current_user)%></li>
          <%end%>
      </ul>
      </div>
    </header>
      <div class="content">
          <%=yield%><br>
      </div>
  </body>
</html>
